void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef *hadc){
	if(HAL_ADC_Stop_DMA(hadc)!=HAL_OK){
		Error_Handler();
	}
	HAL_DAC_SetValue(&hdac1, DAC_CHANNEL_1, DAC_ALIGN_12B_R,ADCBuffer[ADCBufferIndex]);
	ADCConversionComplete =true;
}


